<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hale</groupId>
    <artifactId>waltz</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>waltz-common</module>
        <module>waltz-model</module>
        <module>waltz-service</module>
        <module>waltz-web</module>
        <module>waltz-jobs</module>
        <module>waltz-data</module>
    </modules>
    <packaging>pom</packaging>b

    <name>waltz</name>
    <url>http://khartec.com</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>


    <profiles>

        <profile>
            <activation>
                <property>
                    <name>db.type</name>
                    <value>maria</value>
                </property>
                <activeByDefault>true</activeByDefault>
            </activation>

            <id>waltz-mariadb</id>
            <properties>
                <jdbc.group>org.mariadb.jdbc</jdbc.group>
                <jdbc.artifact>mariadb-java-client</jdbc.artifact>
                <jdbc.version>1.3.2</jdbc.version>
                <jdbc.driver>org.mariadb.jdbc.Driver</jdbc.driver>
                <jooq.dialect>MARIADB</jooq.dialect>
                <jooq.group>org.jooq</jooq.group>
                <jooq.database>org.jooq.util.mariadb.MariaDBDatabase</jooq.database>
            </properties>
        </profile>

        <profile>
            <!--
                Note: this profile requires a professional license for JOOQ,
                see: http://www.jooq.org/download/
            -->
            <activation>
                <property>
                    <name>db.type</name>
                    <value>mssql</value>
                </property>
            </activation>
            <id>waltz-mssql</id>
            <properties>
                <jdbc.group>com.microsoft.sqlserver</jdbc.group>
                <jdbc.artifact>sqljdbc4</jdbc.artifact>
                <jdbc.version>4.0</jdbc.version>
                <jdbc.driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</jdbc.driver>
                <jooq.group>org.jooq.pro</jooq.group>
                <jooq.database>org.jooq.util.sqlserver.SQLServerDatabase</jooq.database>
                <jooq.dialect>SQLSERVER2014</jooq.dialect>
            </properties>
        </profile>


    </profiles>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-core</artifactId>
                <version>1.1.3</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>1.1.3</version>
            </dependency>

            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-annotations</artifactId>
                <version>2.5.4</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-core</artifactId>
                <version>2.5.4</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>2.5.4</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.datatype</groupId>
                <artifactId>jackson-datatype-jdk8</artifactId>
                <version>2.5.4</version>
            </dependency>
            <dependency>
                <groupId>org.pcollections</groupId>
                <artifactId>pcollections</artifactId>
                <version>2.1.2</version>
            </dependency>
            <dependency>
                <groupId>net.sf.supercsv</groupId>
                <artifactId>super-csv</artifactId>
                <version>2.3.1</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.datatype</groupId>
                <artifactId>jackson-datatype-jsr310</artifactId>
                <version>2.4.0</version>
            </dependency>

            <dependency>
                <groupId>com.sparkjava</groupId>
                <artifactId>spark-core</artifactId>
                <version>2.2</version>
            </dependency>

            <dependency>
                <groupId>com.zaxxer</groupId>
                <artifactId>HikariCP</artifactId>
                <version>2.3.9</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>4.2.1.RELEASE</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-jdbc</artifactId>
                <version>4.2.1.RELEASE</version>
            </dependency>

            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.7.12</version>
            </dependency>

            <dependency>
                <groupId>org.jooq</groupId>
                <artifactId>jool</artifactId>
                <version>0.9.10</version>
            </dependency>

            <dependency>
                <groupId>de.svenkubiak</groupId>
                <artifactId>jBCrypt</artifactId>
                <version>0.4</version>
            </dependency>

            <!-- jooq -->
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq</artifactId>
                <version>3.7.3</version>
            </dependency>
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq-meta</artifactId>
                <version>3.7.3</version>
            </dependency>
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq-codegen</artifactId>
                <version>3.7.3</version>
            </dependency>


            <!-- PROVIDED -->

            <dependency>
                <groupId>org.immutables</groupId>
                <artifactId>value</artifactId>
                <version>2.1.8</version>
            </dependency>

            <!-- TEST -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <useIncrementalCompilation>false</useIncrementalCompilation>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
