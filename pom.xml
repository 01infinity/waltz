<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hale</groupId>
    <artifactId>waltz</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>waltz-common</module>
        <module>waltz-model</module>
        <module>waltz-service</module>
        <module>waltz-web</module>
        <module>waltz-jobs</module>
        <module>waltz-data</module>
    </modules>
    <packaging>pom</packaging>

    <name>waltz</name>
    <url>http://khartec.com</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jackson.version>2.7.0</jackson.version>
        <jackson-jsr310.version>2.4.0</jackson-jsr310.version>
        <pcollections.version>2.1.2</pcollections.version>
        <jooq.version>3.7.3</jooq.version>
        <jool.version>0.9.10</jool.version>
        <immutables.version>2.1.15</immutables.version>
        <junit.version>4.12</junit.version>
        <spring.version>4.2.5.RELEASE</spring.version>
        <spark.version>2.3</spark.version>
        <slf4j.version>1.7.20</slf4j.version>
        <logback.version>1.1.7</logback.version>
        <hikari.version>2.4.5</hikari.version>
        <super-csv.version>2.3.1</super-csv.version>
        <jbcrypt.version>0.4</jbcrypt.version>
        <jwt.version>2.1.0</jwt.version>

        <plugin.maven-compiler.version>3.3</plugin.maven-compiler.version>
    </properties>


    <profiles>

        <profile>
            <activation>
                <property>
                    <name>!db.type</name>
                </property>
                <!--<activeByDefault>true</activeByDefault>-->
            </activation>
            <id>waltz-mariadb</id>
            <properties>
                <jdbc.group>org.mariadb.jdbc</jdbc.group>
                <jdbc.artifact>mariadb-java-client</jdbc.artifact>
                <jdbc.version>1.3.2</jdbc.version>
                <jdbc.driver>org.mariadb.jdbc.Driver</jdbc.driver>
                <jooq.dialect>MARIADB</jooq.dialect>
                <jooq.group>org.jooq</jooq.group>
                <jooq.database>org.jooq.util.mariadb.MariaDBDatabase</jooq.database>
            </properties>
        </profile>

        <profile>
            <!--
                Note: this profile requires a professional license for JOOQ,
                see: http://www.jooq.org/download/
            -->
            <activation>
                <property>
                    <name>db.type</name>
                    <value>mssql</value>
                </property>
                <!--<activeByDefault>true</activeByDefault>-->
            </activation>
            <id>waltz-mssql</id>
            <properties>
                <jdbc.group>com.microsoft.sqlserver</jdbc.group>
                <jdbc.artifact>sqljdbc4</jdbc.artifact>
                <jdbc.version>4.0</jdbc.version>
                <jdbc.driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</jdbc.driver>
                <jooq.group>org.jooq.pro</jooq.group>
                <jooq.database>org.jooq.util.sqlserver.SQLServerDatabase</jooq.database>
                <jooq.dialect>SQLSERVER2014</jooq.dialect>
            </properties>
        </profile>


    </profiles>


    <dependencyManagement>
        <dependencies>

            <!-- web -->
            <dependency>
                <groupId>com.sparkjava</groupId>
                <artifactId>spark-core</artifactId>
                <version>${spark.version}</version>
            </dependency>
            <dependency>
                <groupId>com.auth0</groupId>
                <artifactId>java-jwt</artifactId>
                <version>${jwt.version}</version>
            </dependency>
            <dependency>
                <groupId>de.svenkubiak</groupId>
                <artifactId>jBCrypt</artifactId>
                <version>${jbcrypt.version}</version>
            </dependency>


            <!-- json -->
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-annotations</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-core</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.datatype</groupId>
                <artifactId>jackson-datatype-jdk8</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.datatype</groupId>
                <artifactId>jackson-datatype-jsr310</artifactId>
                <version>${jackson-jsr310.version}</version>
            </dependency>


            <!-- logging -->
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-core</artifactId>
                <version>${logback.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>${logback.version}</version>
            </dependency>



            <!-- core -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jooq</groupId>
                <artifactId>jool</artifactId>
                <version>${jool.version}</version>
            </dependency>
            <dependency>
                <groupId>org.immutables</groupId>
                <artifactId>value</artifactId>
                <version>${immutables.version}</version>
            </dependency>
            <dependency>
                <groupId>org.pcollections</groupId>
                <artifactId>pcollections</artifactId>
                <version>${pcollections.version}</version>
            </dependency>


            <!-- db -->
            <dependency>
                <groupId>${jdbc.group}</groupId>
                <artifactId>${jdbc.artifact}</artifactId>
                <version>${jdbc.version}</version>
            </dependency>
            <dependency>
                <groupId>com.zaxxer</groupId>
                <artifactId>HikariCP</artifactId>
                <version>${hikari.version}</version>
            </dependency>
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq</artifactId>
                <version>${jooq.version}</version>
            </dependency>
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq-meta</artifactId>
                <version>${jooq.version}</version>
            </dependency>
            <dependency>
                <groupId>${jooq.group}</groupId>
                <artifactId>jooq-codegen</artifactId>
                <version>${jooq.version}</version>
            </dependency>


            <!-- other -->
            <dependency>
                <groupId>net.sf.supercsv</groupId>
                <artifactId>super-csv</artifactId>
                <version>${super-csv.version}</version>
            </dependency>



            <!-- test -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${plugin.maven-compiler.version}</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <useIncrementalCompilation>false</useIncrementalCompilation>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
